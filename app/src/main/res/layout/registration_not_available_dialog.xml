<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- red warning icon -->
            <ImageView
                android:id="@+id/icon_warning"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_warning"
                android:contentDescription="Warning icon" />

            <!-- title -->
            <TextView
                android:id="@+id/popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Registration not available"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- body -->
            <TextView
                android:id="@+id/popup_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The registration period for Event 5 is December 1, 2025 - December 31, 2025.\nPlease register once registration is opened."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_got_it"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Got it"
                android:textAllCaps="false"
                android:textColor="#222222"
                app:cornerRadius="16dp"
                app:backgroundTint="#E6E6E6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
