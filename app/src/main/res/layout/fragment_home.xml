<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_blue_gradient"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/search_bar_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_bar_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_filter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/filter_icon"
                app:tint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:background="@null"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:paddingStart="8dp"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="@string/search_icon"
                app:tint="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Help icon"
                android:src="@drawable/ic_action_help"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="How does the selection process work?"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/selection_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#66000000"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_action_help_blue" />

                <TextView
                    android:id="@+id/popup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="How does the selection process work?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/popup_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When registration for an event closes, the system randomly selects participants from the waiting list.\n\nIf you’re selected, you’ll receive a notification inviting you to confirm your spot. If you decline or don’t respond, another person will be randomly selected.\n\nThis process ensures everyone has an equal chance to attend!"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_got_it"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Got it"
                    android:textAllCaps="false"
                    android:textColor="#222222"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#E6E6E6" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</FrameLayout>
