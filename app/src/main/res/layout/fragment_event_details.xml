<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/tab_indicator_rounded"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">
    
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Event Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Event Title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Waiting"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/signupDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sign-up: N/A"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/eventDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event: N/A"
            android:textColor="@android:color/darker_gray" />
  
        <TextView
            android:id="@+id/waitlistCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Capacity: N/A"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/geoConsent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geo Consent Required: N/A"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/notifyWhenNotSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notify if not selected: N/A"
            android:textColor="@android:color/darker_gray" />
  
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: N/A"
            android:textColor="@android:color/darker_gray" />
    
        <TextView
            android:id="@+id/organizerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organizer: N/A"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Event Description"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D9D9D9"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/joinWaitlistButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#5DBD70"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Join Waitlist" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
