<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_event_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:fillViewport="true"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_events"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:paddingBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/create_event_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Event Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_name"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/input_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Value"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BDBDBD"
                    android:inputType="text"
                    android:layout_marginBottom="12dp" />

                <!-- Event Period -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_period"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/input_event_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="From"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="6dp"
                        android:textColor="@android:color/black" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/input_event_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="To"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="6dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/input_time_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="From"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textColor="@android:color/black" />
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/input_time_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:hint="To"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textColor="@android:color/black" />
            </LinearLayout>
                <!-- Event URL (poster or webpage) -->
                <EditText
                    android:id="@+id/input_event_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="Enter Image URL"
                    android:hint="Event URL (image or webpage)"
                    android:inputType="textUri"
                    android:textColor="@android:color/black"
                    android:textColorHint="#808080"
                    android:backgroundTint="#9E9E9E" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noparti"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/input_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Value"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textColorHint="#BDBDBD"
                android:layout_marginBottom="12dp" />





                <!-- DAYS OF WEEK FILTER -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dotw"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Material Multi-Select Day Buttons -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/days_toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleSelection="false"
                    app:selectionRequired="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_mon"
                        android:text="Mon"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_tue"
                        android:text="Tue"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_wed"
                        android:text="Wed"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_thu"
                        android:text="Thu"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_fri"
                        android:text="Fri"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_sat"
                        android:text="Sat"
                        style="@style/DayToggleStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/day_sun"
                        android:text="Sun"
                        style="@style/DayToggleStyle" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- Number of Participants -->


                <!-- Registration Period -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_period"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/input_reg_open"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="From"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="6dp"
                        android:textColor="@android:color/black" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/input_reg_close"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="To"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="6dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Limit Registration -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limit Registration (Optional)"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/input_max_entrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Value"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BDBDBD"
                    android:layout_marginBottom="12dp" />

                <!-- Event Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_desc"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/input_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Value"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BDBDBD"
                    android:inputType="text"
                    android:layout_marginBottom="12dp" />

                <!-- Event Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_location"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/input_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter location"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BDBDBD"
                    android:layout_marginBottom="4dp" />

                <!-- Hidden coordinate fields -->
                <EditText
                    android:id="@+id/input_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/input_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:inputType="numberDecimal" />

                <!-- Enable Geolocation Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_geoconsent"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/check_geo_consent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/info_geo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Info"
                        app:tint="#757575" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_geo_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See where people are registering from."
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btn_create_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/black"
                    android:textAllCaps="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>