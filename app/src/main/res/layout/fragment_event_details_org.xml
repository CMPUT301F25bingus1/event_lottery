<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/tab_indicator_rounded"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="320dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/event_image"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/event_title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/waiting"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/signupDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sign_up_n_a"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/eventDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_n_a"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/waitlistCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/waiting_0"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/geoConsent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/geo_consent_required_n_a"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_n_a"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/organizerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/organizer_n_a"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/event_description"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Event URL"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_event_url_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://example.com/poster.jpg"
            android:inputType="textUri"
            android:textColor="@android:color/black"
            android:textColorHint="#808080"
            android:backgroundTint="#9E9E9E" />

        <Button
            android:id="@+id/btn_update_event_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Update Event URL"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/capacityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/capacityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 0" />

            <TextView
                android:id="@+id/selectedCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected: 0" />

            <TextView
                android:id="@+id/acceptedCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted: 0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <!-- Lottery Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number to select:" />

                <EditText
                    android:id="@+id/lotteryNumberInput"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="0"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/lotteryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5DBD70"
                    android:textColor="@android:color/white"
                    android:text="Run Lottery" />
            </LinearLayout>

            <Button
                android:id="@+id/notifyEntrantsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Entrants" />

            <Button
                android:id="@+id/viewEntrantsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Entrants"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5DBD70"
                android:textColor="@android:color/white" />


            <!-- Cancel Button Row -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D9D9D9"
                android:textColor="@android:color/black"
                android:text="@string/cancel" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/acceptDeclineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/declineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
